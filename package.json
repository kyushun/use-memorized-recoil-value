{
  "name": "use-memorized-recoil-value",
  "version": "0.1.0",
  "description": "A react hook for subscribing to the memorized value of asynchronous recoil selectors",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "esm/index.js",
  "author": "kyushun <kyushun12@gmail.com>",
  "homepage": "https://github.com/kyushun/use-memorized-recoil-value",
  "bugs": {
    "url": "https://github.com/kyushun/use-memorized-recoil-value/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kyushun/use-memorized-recoil-value.git"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "hook",
    "hooks",
    "react-hook",
    "react-hooks",
    "recoil"
  ],
  "files": [
    "lib/",
    "esm/"
  ],
  "scripts": {
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn build:cjs && yarn build:es",
    "lint": "eslint '{src,tests}/**/*.{ts,tsx}'",
    "lint:fix": "yarn lint --fix",
    "test": "jest"
  },
  "dependencies": {
    "tslib": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "recoil": "^0.1.2"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^5.0.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "recoil": "^0.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>/tests/**/*.test.(ts|tsx)"
    ]
  }
